# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      # Fix for TweetNacl and CTweetNacl module dependency issues
      if target.name == 'TweetNacl'
        config.build_settings['DEFINES_MODULE'] = 'YES'
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['MODULEMAP_FILE'] = '$(PODS_ROOT)/TweetNacl/Sources/module.map'
        config.build_settings['SWIFT_INCLUDE_PATHS'] = '$(inherited) $(PODS_ROOT)/TweetNacl/Sources'
        config.build_settings['OTHER_SWIFT_FLAGS'] = '$(inherited) -Xcc -I$(PODS_ROOT)/TweetNacl/Sources/CTweetNacl/include'
      end
      # Ensure pusher_channels_flutter can find TweetNacl
      if target.name == 'pusher_channels_flutter'
        config.build_settings['SWIFT_INCLUDE_PATHS'] = '$(inherited) $(PODS_ROOT)/TweetNacl/Sources'
        config.build_settings['OTHER_SWIFT_FLAGS'] = '$(inherited) -Xcc -I$(PODS_ROOT)/TweetNacl/Sources/CTweetNacl/include'
      end
      # Fix for GoogleMaps module dependency issues
      if target.name == 'GoogleMaps'
        config.build_settings['DEFINES_MODULE'] = 'YES'
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      end
      # Ensure Google-Maps-iOS-Utils can find GoogleMaps
      if target.name == 'Google-Maps-iOS-Utils'
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['DEFINES_MODULE'] = 'YES'
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= []
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(inherited)'
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PODS_ROOT)/GoogleMaps/Maps/Frameworks'
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PODS_ROOT)/GoogleMaps/Base/Frameworks'
        config.build_settings['OTHER_LDFLAGS'] ||= []
        config.build_settings['OTHER_LDFLAGS'] << '-framework GoogleMaps'
        config.build_settings['OTHER_LDFLAGS'] << '-framework GoogleMapsBase'
      end
    end
  end
end
